<div class="flex-1 flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">
    <div class="bg-white border border-gray-200 rounded-2xl p-8">
      <div class="text-center mb-8">
        <div class="mx-auto w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
          </svg>
        </div>
        <h1 class="text-2xl font-semibold text-gray-900">Resend confirmation</h1>
        <p class="mt-2 text-sm text-gray-500">Enter your email and we'll send you a new confirmation link</p>
      </div>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "you@example.com",
              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
              class: "w-full px-4 py-2.5 text-sm rounded-full border border-gray-300 bg-white text-gray-900 placeholder:text-gray-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Resend confirmation",
              class: "w-full px-4 py-2.5 text-sm font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="flex flex-col items-center gap-3 text-sm text-gray-600">
          <%= link_to "Back to sign in", new_session_path(resource_name), class: "text-primary underline hover:text-primary/80 transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>
