<div class="mt-6 pt-6 border-t border-base-200">
  <div class="flex flex-col items-center gap-3 text-sm">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Back to log in", new_session_path(resource_name), class: "text-base-content/70 hover:text-base-content transition-colors" %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create an account", new_registration_path(resource_name), class: "text-base-content/70 hover:text-base-content transition-colors" %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-base-content/70 hover:text-base-content transition-colors" %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-base-content/70 hover:text-base-content transition-colors" %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-base-content/70 hover:text-base-content transition-colors" %>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <div class="w-full mt-2">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-base-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-base-100 text-base-content/50">Or continue with</span>
          </div>
        </div>
        <div class="mt-4 flex flex-col gap-2">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to omniauth_authorize_path(resource_name, provider),
                data: { turbo: false },
                class: "w-full px-4 py-2.5 text-sm font-medium rounded-full border border-base-300 text-base-content hover:bg-base-200 transition-colors cursor-pointer flex items-center justify-center gap-2" do %>
              <span>Sign in with <%= OmniAuth::Utils.camelize(provider) %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
