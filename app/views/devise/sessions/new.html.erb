<div class="flex-1 flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">
    <div class="bg-white border border-gray-200 rounded-2xl p-8">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-semibold text-gray-900">Welcome back</h1>
        <p class="mt-2 text-sm text-gray-500">Sign in to your account to continue</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "you@example.com",
              class: "w-full px-4 py-2.5 text-sm rounded-full border border-gray-300 bg-white text-gray-900 placeholder:text-gray-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1.5" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "Enter your password",
              class: "w-full px-4 py-2.5 text-sm rounded-full border border-gray-300 bg-white text-gray-900 placeholder:text-gray-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors" %>
          <%- if devise_mapping.recoverable? %>
            <div class="mt-1.5 text-right">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-primary hover:text-primary/80 transition-colors" %>
            </div>
          <% end %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2">
            <%= f.check_box :remember_me, class: "checkbox checkbox-sm cursor-pointer" %>
            <%= f.label :remember_me, "Remember me", class: "text-sm text-gray-600 cursor-pointer" %>
          </div>
        <% end %>

        <div class="pt-2 space-y-3">
          <%= f.submit "Sign in",
              class: "w-full px-4 py-2.5 text-base font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer" %>

          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= button_to omniauth_authorize_path(resource_name, provider),
                  data: { turbo: false },
                  class: "w-full px-4 py-2.5 text-base font-medium rounded-full border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 transition-colors cursor-pointer flex items-center justify-center gap-2" do %>
                <% if provider.to_s.include?("google") %>
                  <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                  </svg>
                  <span>Sign in with Google</span>
                <% else %>
                  <span>Sign in with <%= provider.to_s.titleize %></span>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <p class="text-sm text-gray-600 text-center">
          <%- if devise_mapping.registerable? %>
            Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary underline hover:text-primary/80 transition-colors" %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
