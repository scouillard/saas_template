<div class="max-w-7xl mx-auto px-4 py-8">
  <%= render "shared/settings_nav" %>

  <div class="bg-base-100 border border-base-300 rounded-2xl p-6">
    <div class="pb-5 border-b border-base-300 mb-6">
      <h2 class="text-xl font-semibold text-base-content mb-1">Plan & Billing</h2>
      <p class="text-sm text-base-500">Manage your subscription</p>
    </div>

    <div class="space-y-6">
      <div>
        <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Current Plan</label>
        <p class="text-lg font-semibold text-base-content capitalize mt-2">
          <%= current_account.subscribed? ? "Pro" : "Free" %>
          <% if current_account.subscription_status.present? && current_account.subscription_status != "none" %>
            <span class="text-sm font-normal text-base-500">(<%= current_account.subscription_status %>)</span>
          <% end %>
        </p>
      </div>

      <% if current_account.subscription_started_at.present? %>
        <div>
          <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Billing Period</label>
          <p class="text-base-content font-medium mt-1">
            <%= current_account.subscription_started_at.strftime("%B %d, %Y") %> -
            <%= current_account.subscription_ends_at&.strftime("%B %d, %Y") || "Ongoing" %>
          </p>
        </div>
      <% end %>

      <% unless current_account.subscribed? %>
        <div class="pt-6 border-t border-base-300">
          <h3 class="text-sm font-semibold text-base-content mb-4">Available Plans</h3>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <%# Monthly Plan %>
            <div class="p-6 bg-base-200 rounded-xl border border-base-300">
              <h4 class="text-lg font-semibold text-base-content">Pro Monthly</h4>
              <p class="text-3xl font-semibold text-base-content mt-2">$19<span class="text-sm font-normal text-base-500">/mo</span></p>
              <ul class="mt-4 space-y-2 text-sm text-base-500">
                <li>Unlimited projects</li>
                <li>Priority support</li>
                <li>Advanced analytics</li>
              </ul>
              <%= form_with url: stripe_checkout_path, method: :post, class: "mt-6" do |f| %>
                <%= f.hidden_field :price_id, value: ENV["STRIPE_PRICE_MONTHLY"], data: { stripe_price: "monthly" } %>
                <%= f.submit "Subscribe", class: "w-full px-4 py-2.5 text-base font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer" %>
              <% end %>
            </div>

            <%# Yearly Plan %>
            <div class="p-6 bg-base-200 rounded-xl border border-base-300 relative">
              <span class="absolute -top-2 right-4 px-2 py-0.5 text-xs font-semibold bg-success text-success-content rounded-full">Save 20%</span>
              <h4 class="text-lg font-semibold text-base-content">Pro Yearly</h4>
              <p class="text-3xl font-semibold text-base-content mt-2">$15<span class="text-sm font-normal text-base-500">/mo</span></p>
              <p class="text-sm text-base-500">$180 billed yearly</p>
              <ul class="mt-4 space-y-2 text-sm text-base-500">
                <li>Unlimited projects</li>
                <li>Priority support</li>
                <li>Advanced analytics</li>
              </ul>
              <%= form_with url: stripe_checkout_path, method: :post, class: "mt-6" do |f| %>
                <%= f.hidden_field :price_id, value: ENV["STRIPE_PRICE_YEARLY"], data: { stripe_price: "yearly" } %>
                <%= f.submit "Subscribe", class: "w-full px-4 py-2.5 text-base font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if current_account.subscribed? %>
        <div class="pt-6 border-t border-base-300">
          <h3 class="text-sm font-semibold text-error mb-4">Cancel Subscription</h3>
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 p-4 bg-base-200 rounded-xl border border-base-300">
            <div>
              <div class="text-base-content font-medium">Cancel Subscription</div>
              <div class="text-sm text-base-500">Your data will be retained for 30 days</div>
            </div>
            <button type="button" class="px-4 py-2 text-sm font-medium rounded-full text-error hover:bg-base-300 transition-all cursor-pointer w-fit">
              Cancel Plan
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
