<%= turbo_frame_tag "subscribe_form" do %>
  <%= form_with model: subscriber, url: subscribe_path, class: "space-y-4" do |f| %>
    <% if subscriber.errors.any? %>
      <div class="text-sm text-error"><%= subscriber.errors.full_messages.first %></div>
    <% end %>

    <% if local_assigns[:context] == :footer %>
      <div class="flex gap-2">
        <%= f.email_field :email,
            placeholder: "you@example.com",
            required: true,
            class: "flex-1 min-w-0 px-4 py-2 text-sm rounded-full border border-base-300 bg-base-100 text-base-content placeholder:text-base-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors #{subscriber.errors[:email].any? ? 'border-error' : ''}" %>
        <button type="submit" class="px-4 py-2 text-sm font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer">
          Subscribe
        </button>
      </div>
    <% else %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-base-600 mb-1.5" %>
        <%= f.email_field :email,
            placeholder: "you@example.com",
            required: true,
            class: "w-full px-4 py-2.5 text-sm rounded-full border border-base-300 bg-base-100 text-base-content placeholder:text-base-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors #{subscriber.errors[:email].any? ? 'border-error' : ''}" %>
      </div>
      <div class="pt-2">
        <%= f.submit "Join Waitlist",
            class: "w-full px-4 py-2.5 text-base font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer" %>
      </div>
    <% end %>
  <% end %>
<% end %>
