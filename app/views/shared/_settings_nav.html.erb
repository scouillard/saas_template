<%
  current_tab = case request.path
  when /^\/profile/ then 'profile'
  when /^\/team/ then 'team'
  when /^\/settings/ then 'settings'
  when /^\/plan/ then 'plan'
  else ''
  end
%>

<div class="w-full mb-6">
  <div class="overflow-x-auto">
    <div class="inline-flex bg-base-200 rounded-full p-1 whitespace-nowrap">
    <%= link_to "Profile", profile_path,
        class: "px-6 py-3 text-sm font-medium rounded-full text-center transition-all #{current_tab == 'profile' ? 'bg-base-100 text-base-content shadow-sm' : 'text-base-500 hover:text-base-content'}" %>
    <%= link_to "Team", team_path,
        class: "px-6 py-3 text-sm font-medium rounded-full text-center transition-all #{current_tab == 'team' ? 'bg-base-100 text-base-content shadow-sm' : 'text-base-500 hover:text-base-content'}" %>
    <%= link_to "Settings", settings_path,
        class: "px-6 py-3 text-sm font-medium rounded-full text-center transition-all #{current_tab == 'settings' ? 'bg-base-100 text-base-content shadow-sm' : 'text-base-500 hover:text-base-content'}" %>
    <%= link_to "Plan", plan_path,
        class: "px-6 py-3 text-sm font-medium rounded-full text-center transition-all #{current_tab == 'plan' ? 'bg-base-100 text-base-content shadow-sm' : 'text-base-500 hover:text-base-content'}" %>
    </div>
  </div>
</div>
