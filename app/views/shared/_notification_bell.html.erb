<div class="dropdown dropdown-bottom dropdown-end" data-controller="notification-bell">
  <div tabindex="0" role="button" class="btn btn-ghost btn-circle cursor-pointer" data-action="click->notification-bell#markSeen">
    <div class="indicator">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
      <% if current_user.notifications.unseen.exists? %>
        <span data-notification-bell-target="indicator" class="w-1.5 h-1.5 bg-error rounded-full indicator-item"></span>
      <% end %>
    </div>
  </div>

  <div tabindex="0" class="dropdown-content z-50 mt-3 w-80 bg-base-100 rounded-2xl border border-base-300 shadow-lg overflow-hidden">
    <div class="p-4 border-b border-base-300">
      <h3 class="font-semibold text-base-content">Notifications</h3>
    </div>

    <div class="max-h-96 overflow-y-auto">
      <%= render "notifications/list", notifications: current_user.notifications.includes(:event) %>
    </div>
  </div>
</div>
