<%= render "shared/settings_nav" %>

<div class="w-full bg-base-100 border border-base-300 rounded-2xl p-6">
  <div class="pb-5 border-b border-base-300 mb-6">
    <h2 class="text-xl font-semibold text-base-content mb-1">Team Settings</h2>
    <p class="text-sm text-base-500">Manage your team and invitations</p>
  </div>

  <div class="space-y-8">
    <div data-controller="inline-edit">
      <div data-inline-edit-target="display">
        <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Team Name</label>
        <div class="flex items-center gap-2 mt-1">
          <p class="text-base-content font-medium"><%= current_account.name %></p>
          <button type="button" data-action="click->inline-edit#edit" class="text-primary text-sm hover:brightness-75 transition-colors cursor-pointer">
            Edit
          </button>
        </div>
      </div>
      <div data-inline-edit-target="form" class="hidden">
        <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Team Name</label>
        <%= form_with model: current_account, url: team_path, method: :patch, class: "flex flex-col sm:flex-row sm:items-center gap-2 mt-1 max-w-md" do |f| %>
          <%= f.text_field :name,
              data: { inline_edit_target: "input" },
              class: "flex-1 px-4 py-2 text-sm rounded-full border border-base-300 bg-base-100 text-base-content placeholder:text-base-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors",
              placeholder: "Enter team name" %>
          <div class="flex gap-2">
            <%= f.submit "Save", class: "px-4 py-2 text-sm font-medium rounded-full text-primary hover:bg-base-200 transition-all cursor-pointer" %>
            <button type="button" data-action="click->inline-edit#cancel" class="px-4 py-2 text-sm font-medium rounded-full text-base-500 hover:text-base-content hover:bg-base-200 transition-all cursor-pointer">
              Cancel
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <div class="pt-6 border-t border-base-300">
      <h3 class="text-sm font-semibold text-base-content mb-3">Invite New Member</h3>
      <%= form_with url: invitations_path, method: :post, class: "flex flex-col sm:flex-row gap-3 max-w-xl" do |f| %>
        <%= f.email_field :email,
            required: true,
            placeholder: "colleague@example.com",
            class: "flex-1 px-4 py-2.5 text-sm rounded-full border border-base-300 bg-base-100 text-base-content placeholder:text-base-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors" %>
        <%= f.submit "Send Invitation",
            class: "px-6 py-2.5 text-sm font-semibold rounded-full bg-primary text-primary-content border-2 border-primary hover:brightness-90 transition-all cursor-pointer w-full sm:w-auto" %>
      <% end %>
    </div>

    <div class="pt-6 border-t border-base-300">
      <h3 class="text-sm font-semibold text-base-content mb-3">Current Members (<%= @memberships.count %>)</h3>
      <div class="space-y-2">
        <% @memberships.each do |membership| %>
          <div class="flex items-center gap-4 p-4 bg-base-200 rounded-xl border border-base-300">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
              <span class="text-primary font-semibold text-lg"><%= membership.user.email[0].upcase %></span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="font-medium text-base-content truncate">
                <%= membership.user.name %>
              </div>
              <div class="text-sm text-base-500 truncate"><%= membership.user.email %></div>
            </div>
            <div class="px-3 py-1 rounded-full text-xs font-semibold <%= role_badge_class(membership.role) %>">
              <%= membership.role.capitalize %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if @pending_invitations.any? %>
      <div class="pt-6 border-t border-base-300">
        <h3 class="text-sm font-semibold text-base-content mb-3">Pending Invitations (<%= @pending_invitations.count %>)</h3>
        <div class="space-y-2">
          <% @pending_invitations.each do |invitation| %>
            <div class="flex items-center gap-4 p-4 bg-base-200 rounded-xl border border-base-300">
              <div class="w-12 h-12 rounded-full bg-warning/10 flex items-center justify-center">
                <span class="text-warning font-semibold text-lg"><%= invitation.email[0].upcase %></span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-base-content truncate"><%= invitation.email %></div>
                <div class="text-sm text-base-500">
                  Invited by <%= invitation.invited_by.name || invitation.invited_by.email %> Â· Expires <%= time_ago_in_words(invitation.expires_at) %> from now
                </div>
              </div>
              <div class="flex items-center gap-2">
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-warning/10 text-warning border border-warning/20">Pending</span>
                <%= button_to invitation_path(invitation), method: :delete, class: "p-2 text-base-400 hover:text-error transition-colors cursor-pointer", title: "Cancel invitation", data: { turbo_confirm: "Cancel invitation to #{invitation.email}?" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
