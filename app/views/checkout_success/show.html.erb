<div class="bg-base-200 flex-1 min-h-screen flex items-center justify-center px-4">
  <div class="bg-base-100 border border-base-300 rounded-2xl p-6 sm:p-8 max-w-md w-full">
    <div class="text-center mb-6">
      <div class="w-16 h-16 rounded-full bg-success/10 flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-success" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
      </div>
      <h1 class="text-2xl font-semibold text-base-content mb-2">Welcome to <%= @plan&.name || "Pro" %>!</h1>
      <p class="text-sm text-base-500">Your subscription is now active</p>
    </div>

    <div class="space-y-3 mb-6">
      <div class="flex justify-between text-sm">
        <span class="text-base-500">Plan</span>
        <span class="text-base-content font-medium"><%= @plan&.name %> (<%= @interval == "year" ? "Annual" : "Monthly" %>)</span>
      </div>
      <% if @subscription.trial_end.present? %>
        <div class="flex justify-between text-sm">
          <span class="text-base-500">Trial ends</span>
          <span class="text-base-content font-medium"><%= Time.at(@subscription.trial_end).strftime("%b %-d, %Y") %></span>
        </div>
      <% end %>
      <div class="flex justify-between text-sm">
        <span class="text-base-500">Next billing date</span>
        <span class="text-base-content font-medium"><%= Time.at(@subscription.current_period_end).strftime("%b %-d, %Y") %></span>
      </div>
    </div>

    <%= link_to "Go to Dashboard", root_path, class: "w-full px-4 py-2.5 text-base font-semibold rounded-full bg-primary text-primary-content hover:brightness-90 transition-all cursor-pointer text-center block" %>
  </div>
</div>
