<%= render "shared/settings_nav" %>

<div class="w-full bg-base-100 border border-base-300 rounded-2xl p-6">
    <div class="pb-5 border-b border-base-300 mb-6">
      <h2 class="text-xl font-semibold text-base-content mb-1">Profile Settings</h2>
      <p class="text-sm text-base-500">Manage your personal information</p>
    </div>

    <div class="space-y-6">
      <div data-controller="inline-edit">
        <div data-inline-edit-target="display">
          <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Name</label>
          <div class="flex items-center gap-2 mt-1">
            <p class="text-base-content font-medium"><%= current_user.name.presence || "Not set" %></p>
            <button type="button" data-action="click->inline-edit#edit" class="text-primary text-sm hover:brightness-75 transition-colors cursor-pointer">
              Edit
            </button>
          </div>
        </div>
        <div data-inline-edit-target="form" class="hidden">
          <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Name</label>
          <%= form_with model: current_user, url: profile_path, method: :patch, class: "flex flex-col sm:flex-row sm:items-center gap-2 mt-1 max-w-md" do |f| %>
            <%= f.text_field :name,
                data: { inline_edit_target: "input" },
                class: "flex-1 px-4 py-2 text-sm rounded-full border border-base-300 bg-base-100 text-base-content placeholder:text-base-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors",
                placeholder: "Enter your name" %>
            <div class="flex gap-2">
              <%= f.submit "Save", class: "px-4 py-2 text-sm font-medium rounded-full text-primary hover:bg-base-200 transition-all cursor-pointer" %>
              <button type="button" data-action="click->inline-edit#cancel" class="px-4 py-2 text-sm font-medium rounded-full text-base-500 hover:text-base-content hover:bg-base-200 transition-all cursor-pointer">
                Cancel
              </button>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Email</label>
        <p class="text-base-content font-medium mt-1"><%= current_user.email %></p>
      </div>

      <div>
        <label class="text-xs font-semibold text-base-500 uppercase tracking-wide">Member Since</label>
        <p class="text-base-content font-medium mt-1"><%= current_user.created_at.strftime("%B %Y") %></p>
      </div>

      <div class="pt-6 border-t border-base-300">
        <h3 class="text-sm font-semibold text-base-content mb-4">Security</h3>

        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <div>
            <div class="text-base-content font-medium">Password</div>
            <div class="text-sm text-base-500">Change your account password</div>
          </div>
          <%= link_to "Change", edit_password_profile_path,
              class: "px-4 py-2 text-sm font-medium rounded-full text-base-500 hover:text-base-content hover:bg-base-200 transition-all cursor-pointer w-fit" %>
        </div>
      </div>

      <div class="pt-6 border-t border-base-300">
        <h3 class="text-sm font-semibold text-error mb-4">Danger Zone</h3>

        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <div>
            <div class="text-base-content font-medium">Delete account</div>
            <div class="text-sm text-base-500">Permanently delete your account and all associated data</div>
          </div>
          <%= link_to "Delete my account", confirm_destroy_profile_path,
              class: "px-4 py-2 text-sm font-medium rounded-full text-error hover:bg-base-200 transition-all cursor-pointer w-fit" %>
        </div>
      </div>
    </div>
  </div>
